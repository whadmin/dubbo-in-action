<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
       http://dubbo.apache.org/schema/dubbo http://dubbo.apache.org/schema/dubbo/dubbo.xsd">

    <dubbo:application name="mock-consumer"/>

    <dubbo:registry address="zookeeper://127.0.0.1:2181"/>

    <!-- 使用mock="org.apache.dubbo.samples.mock.consumer.DemoServiceMock"指定Mock类 -->
    <dubbo:reference id="demoService" interface="org.apache.dubbo.samples.mock.api.DemoService" 
                      mock="org.apache.dubbo.samples.mock.consumer.DemoServiceMock"/>

</beans>
